@inherits LayoutComponentBase

<div class="page">
    <CascadingValue Value="@_loadingSignal">
        <div class="sidebar">
            <NavMenu />
        </div>

        <main>
            <article class="content px-4">
                @Body
            </article>

            <ToastHarness />
            <ModalHarness />
            <RemoteSessionHarness />
            <LoadingSignal @ref="_loadingSignal" />
        </main>
    </CascadingValue>

</div>

@code {
    private LoadingSignal? _loadingSignal;
}